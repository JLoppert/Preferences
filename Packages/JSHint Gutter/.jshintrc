{
  // Details: https://github.com/victorporof/Sublime-JSHint#using-your-own-jshintrc-options
  // Example: https://github.com/jshint/jshint/blob/master/examples/.jshintrc
  // Documentation: http://www.jshint.com/docs/
  "browser": true,
  "esnext": true,
  "globals": {},
  "globalstrict": false,
  "trailing": true,
  "undef": true,
  "unused": true,
  "curly": true,
  "eqeqeq": true,
  "quotmark": "single",
  "devel": true,
  "node": true,
  // Suppress 'Read Only' warning for global variables
  "-W020": true
}
